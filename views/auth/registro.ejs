                        <label>Nombre de Usuario</label>
                        <input type="text" name="username" placeholder="Ej: juanperez" required minlength="3">
                    </div>
                    

                    <div class="form-group">
                        <label>Contrase√±a</label>
                        <input type="password" name="password" placeholder="M√≠nimo 6 caracteres" required minlength="6">
                    </div>
                    
                    <div class="form-group">
                        <label>Confirmar Contrase√±a</label>
                        <input type="password" name="confirmPassword" placeholder="Repite tu contrase√±a" required minlength="6">
                    </div>

                    <div class="form-group">
                        <label>Foto de Perfil (opcional)</label>
                        <input type="file" name="fotoPerfil" accept="image/*" class="form-control">
                    </div>
                    
                    <button type="submit" class="btn btn-login">
                        Crear Cuenta
                    </button>
                </form>
                
                <div class="card login-info" style="margin-top: 20px;">
                    <p>Si ya est√°s registrado<a href="/login" class="btn btn-secondary">Iniciar Sesi√≥n</a></p>
